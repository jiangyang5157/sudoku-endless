<resources>

    <declare-styleable name="DrawShadowFrameLayout">
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BaseFrameLayout">
        <attr name="square" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GradientsLayout">
        <attr name="transparence_minium" format="integer" />
        <attr name="transparence_max" format="integer" />
        <attr name="transparence_strength" format="integer" />
        <attr name="intercept_touch_event" format="boolean" />
    </declare-styleable>

    <declare-styleable name="IconButton">
        <attr name="text" format="string" />
        <attr name="icon_bg" format="reference" />
        <attr name="icon_center" format="reference" />
    </declare-styleable>

    <declare-styleable name="NumberView">
        <attr name="text_size" format="float"/>
        <attr name="text_color" format="reference"/>
        <attr name="stroke_width" format="float"/>
        <attr name="scale" format="float"/>
    </declare-styleable>

</resources>
