<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yang="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.gmail.jiangyang5157.sudoku.component.timer.NumberView
        android:id="@+id/nv_hour_tens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        yang:text_color="@color/white" />

    <com.gmail.jiangyang5157.sudoku.component.timer.NumberView
        android:id="@+id/nv_hour_ones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        yang:text_color="@color/white" />

    <TextView
        android:id="@+id/tv_hour_colon_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tiny_space"
        android:text="@string/colon_key"
        android:textColor="@color/white"
        android:textSize="@dimen/timer_colon_text_size"
        android:textStyle="bold" />

    <com.gmail.jiangyang5157.sudoku.component.timer.NumberView
        android:id="@+id/nv_minute_tens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        yang:text_color="@color/white" />

    <com.gmail.jiangyang5157.sudoku.component.timer.NumberView
        android:id="@+id/nv_minute_ones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        yang:text_color="@color/white" />

    <TextView
        android:id="@+id/tv_minute_colon_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tiny_space"
        android:text="@string/colon_key"
        android:textColor="@color/white"
        android:textSize="@dimen/timer_colon_text_size"
        android:textStyle="bold" />

    <com.gmail.jiangyang5157.sudoku.component.timer.NumberView
        android:id="@+id/nv_second_tens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        yang:text_color="@color/white" />

    <com.gmail.jiangyang5157.sudoku.component.timer.NumberView
        android:id="@+id/nv_second_ones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        yang:text_color="@color/white" />

</LinearLayout>