<resources>

    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:actionOverflowButtonStyle">@style/ActionBar.OverFlow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_previous_item</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
    </style>

    <style name="ActionBar.OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="Theme.Main" parent="Theme.Base">
        <item name="colorPrimary">@color/theme_base</item>
        <item name="colorPrimaryDark">@color/theme_base_dark</item>
    </style>

    <style name="Theme.Settings" parent="Theme.Main">
        <item name="colorPrimary">@color/theme_settings</item>
        <item name="colorPrimaryDark">@color/theme_settings_dark</item>
    </style>

    <style name="Theme.PuzzleStorage" parent="Theme.Main">
        <item name="colorPrimary">@color/theme_puzzle_storage</item>
        <item name="colorPrimaryDark">@color/theme_puzzle_storage_dark</item>
    </style>

    <style name="Theme.Sudoku" parent="Theme.Main">
        <item name="colorPrimary">@color/theme_sudoku</item>
        <item name="colorPrimaryDark">@color/theme_sudoku_dark</item>

        <item name="android:windowBackground">@drawable/textured_slash</item>
    </style>

    <style name="Theme.DialogFragment.Base" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.ProcessingBar.Horizontal.Base" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Theme.ProcessingBar.controllable" parent="Theme.ProcessingBar.Horizontal.Base">
        <item name="android:indeterminate">false</item>
    </style>

</resources>
